extends layout

block content
  
  .main.container
    .row
      .col-md-6.col-md-offset-3

        h1.display-4.m-b-2 Update Ticket
        form(action='/tickets/update/#{id}',method='post')
          input(type="hidden", name="id", value="#{id}")
          div.form-group
            label(for='name') Ticket Name
              h5= title
              input.form-control(id='name',type='hidden',value='#{name}',name='name')
          div.form-group
            label(for='status') Ticket Status
            -const statusOptions = [{value: 'open'}, {value: 'active'}, {value: 'failed'}, {value: 'closed'}]
            select.selectpicker(name="status")
              each status in statusOptions
                option(value=(status.value)) #{status.value}
          div.form-group
            label(for='log') Ticket Log
            input.form-control(id='log',type='text',value='',placeholder='Ticket Log',name='log')
          
          button.btn.btn-primary(type='submit') Submit Ticket
